{% extends 'mentor/layout.html.twig' %}

{% block title %}Dashboard - mentor{% endblock %}

{% block content %}
    <div class="max-w-4xl mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-4">Dashboard - mentor</h1>
        <div class="bg-white shadow-md rounded-lg p-6 mb-4">
            <h2 class="text-xl font-semibold mb-2">Welcome, {{ app.user.firstname ~" " ~ app.user.lastname }}!</h2>
            <p class="text-gray-700">This is your mentor dashboard.</p>
        </div>
        <ul class="divide-y divide-gray-200 bg-white rounded-lg shadow">
            {% for student in students %}
                <li class="flex items-center justify-between px-4 py-4 hover:bg-gray-50">
                    <div>
                        <span class="font-semibold text-gray-800">{{ student.fullname }}</span>
                        <span class="ml-2 text-sm text-gray-500">{{ student.email }}</span>
                    </div>
                    <a href="{{ path('app_mentor_student_details', {student: student.publicIdSimplify}) }}"
                       class="inline-block px-4 py-2 text-sm text-white bg-blue-600 rounded hover:bg-blue-700 transition">
                        Voir le profil
                    </a>
                </li>
            {% else %}
                <li class="px-4 py-4 text-gray-500">Aucun étudiant trouvé.</li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}