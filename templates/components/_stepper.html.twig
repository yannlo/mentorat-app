<ol class="flex items-center w-full p-3 space-x-2 text-sm font-medium text-center text-gray-500 bg-white border border-gray-200 rounded-lg shadow-xs dark:text-gray-400 sm:text-base dark:bg-gray-800 dark:border-gray-700 sm:p-4 sm:space-x-4 rtl:space-x-reverse">
	{% for index, step in form_steps %}
		{% if (step.afterCurrent and step.done) %}
			<li class="flex items-center">
				<a href="{{ path("app_mentor_register",{"step": step.value }) }}" class="flex items-center text-gray-900 hover:text-gray-900  ">
					<span class="flex items-center justify-center w-5 h-5 me-2 text-xs border border-gray-900 hover:text-gray-900 rounded-full shrink-0">
						{{index + 1}}
					</span>
					{{step.label}}
					<svg class="w-3 h-3 ms-2 sm:ms-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 12 10">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7 9 4-4-4-4M1 9l4-4-4-4"/>
					</svg>
				</a>
			</li>
		{% elseif step.done or step.current %}
			<li class="flex items-center">
				<a href="{{ path("app_mentor_register",{"step": step.value }) }}" class="flex items-center text-blue-600 hover:text-blue-900  ">
					<span class="flex items-center justify-center w-5 h-5 me-2 text-xs border border-blue-600 hover:border-blue-900 rounded-full shrink-0">
						{{index + 1}}
					</span>
					{{step.label}}
					<svg class="w-3 h-3 ms-2 sm:ms-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 12 10">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7 9 4-4-4-4M1 9l4-4-4-4"/>
					</svg>
				</a>
			</li>
		{% elseif step.last %}
			<li class="flex items-center">
				<span class="flex items-center justify-center w-5 h-5 me-2 text-xs border border-gray-500 rounded-full shrink-0 dark:border-gray-400">
					{{index + 1}}
				</span>
				{{step.label}}
			</li>
		{% else  %}
			<li class='flex items-center'>
				<a href="{{ path("app_mentor_register",{"step": step.value }) }}" class="flex items-center {% if step.current or step.afterCurrent %} text-gray-900 {% endif %}">
					<span class="flex items-center justify-center w-5 h-5 me-2 text-xs border border-gray-500  {% if step.current or step.afterCurrent %} border-gray-900 {% endif %} rounded-full shrink-0 dark:border-gray-400">
						{{index + 1}}
					</span>
					{{step.label}}

					<svg class="w-3 h-3 ms-2 sm:ms-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 12 10">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7 9 4-4-4-4M1 9l4-4-4-4"/>
					</svg>
				</a>
			</li>
		{% endif %}
	{% endfor %}
</ol>
